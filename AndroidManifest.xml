<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:sharedUserId="android.uid.system"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />

    <!-- android:theme="@android:style/Theme.Holo" -->
<!--         android:supportsRtl="true" -->
        <!-- android:name=".AutoMon" -->
    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
        android:uiOptions="splitActionBarWhenNarrow" >
        <activity
            android:name=".PreMainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_pre_main" >
        </activity>
<!--             android:theme="@android:style/Theme.Holo" -->
        <activity
            android:name=".PopDialogTest"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/sub_menu_test" >
        </activity>
        <activity
            android:name=".ImageChooseActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_image_choose"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >

            <!-- android:theme="@android:style/Theme.Dialog" -->
        </activity>
        <activity
            android:name=".ForkChooseActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_image_choose"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
    </application>

</manifest>